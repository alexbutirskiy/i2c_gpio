{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "args": [
                "all"
            ],
            "options": {
                "shell": {
                    "executable": "C:\\msys64\\msys2_shell.cmd",
                    "args": [
                        "-defterm",
                        "-here",
                        "-no-start",
                        "-c"
                    ]
                },
                "env": {
                    "MSYSTEM": "UCRT64"
                },
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                {
                    "owner": "gcc",
                    "fileLocation": ["relative", "${workspaceFolder}"],
                    "pattern": {
                        "regexp": "^(.+?):(\\d+):(\\d+):\\s+(error|warning):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    }
                }
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "options": {
                "shell": {
                    "executable": "C:\\msys64\\msys2_shell.cmd",
                    "args": [
                        "-defterm",
                        "-here",
                        "-no-start",
                        "-c"
                    ]
                },
                "env": {
                    "MSYSTEM": "UCRT64"
                },
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}
